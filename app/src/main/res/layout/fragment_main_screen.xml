<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34546A"
    tools:context=".generalui.MainScreenFragment">

    <fragment
        android:id="@+id/nav_host_fragment_menu"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:defaultNavHost="false"
        app:navGraph="@navigation/nav_graph_menu" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menu_botttom_nav_view"
        android:layout_width="271dp"
        android:layout_height="68dp"
        android:background="@drawable/bottom_navigation_view_background"
        app:itemBackground="@drawable/bottom_navigation_view_item_background"
        android:layout_gravity="center"
        android:padding="5dp"
        app:itemIconTint="@drawable/bottom_navigation_view_textandiconcolor"
        app:itemTextColor="@drawable/bottom_navigation_view_textandiconcolor"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:menu="@menu/bottom_nav_graph_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>