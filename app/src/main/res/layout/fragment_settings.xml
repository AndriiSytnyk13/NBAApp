<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgraund"
    android:orientation="vertical"
    tools:context=".settings.SettingsFragment">

    <TextView
        android:text="@string/settings"
        style="@style/toolbar_textview_style" />

    <LinearLayout
        android:id="@+id/privacy_policy_layout"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:text="@string/privacy_policy"
            android:layout_weight="1"
            style="@style/settings_textview_style" />

        <ImageView
            android:src="@drawable/double_arrow"
            android:layout_width="wrap_content"
            android:layout_gravity="center|end"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/rate_app_layout"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <TextView
            android:text="@string/rate_app"
            android:layout_weight="1"
            style="@style/settings_textview_style" />

        <ImageView
            android:src="@drawable/double_arrow"
            android:layout_width="wrap_content"
            android:layout_gravity="center|end"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white"/>

    <LinearLayout
        android:id="@+id/share_app_layout"
        android:layout_width="match_parent"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/share_app"
            android:layout_weight="1"
            style="@style/settings_textview_style" />

        <ImageView
            android:src="@drawable/double_arrow"
            android:layout_width="wrap_content"
            android:layout_gravity="center|end"
            android:layout_height="wrap_content"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <View
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white"/>




</LinearLayout>